{
	"include": ["packages/**/*"],
	"compilerOptions": {
		"jsx": "react",
		"target": "es2015",
		"lib": ["es2015", "dom", "ES2016"],
		"baseUrl": "./packages",
		"moduleResolution": "Node",
		"paths": {
			// 编辑器的导入路径指向，导入hostConfig时，指向packages/react-dom/src/hostConfig.ts
			"hostConfig": ["./react-dom/src/hostConfig.ts"]
		}
	}
}
